{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build SeedAndKey DLL Debug",
            "command": "g++",   // it isin the path: C:/msys64/ucrt64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
				"-m64",
                "-g",
                "-shared",
                "-static-libgcc",
                "-static-libstdc++",                
                "${file}",
                "-o",
                "${fileDirname}/build/debug/SeednKey_dbg.dll",
                "-DBUILD_DLL",         // Optional: Define a preprocessor macro
                //"-DWIN32",              // preprocessor macro from the VS project file, commented out the new build id 64bit
                "-DNDEBUG",             // preprocessor macro from the VS project file
                "-D_WINDOWS",           // preprocessor macro from the VS project file
                "-D_USRDLL",            // preprocessor macro from the VS project file
                "-DKEYGENALGO_EXPORTS", // preprocessor macro from the VS project file                
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "Build SeedAndKey DLL Release",
            "command": "g++",   // it isin the path: C:/msys64/ucrt64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
				"-m64",
                "-Os",
                "-s",
                "-shared",
                "-static-libgcc",
                "-static-libstdc++",
                "${file}",
                "-o",
                "${fileDirname}/build/release/SeednKey.dll",
                "-DBUILD_DLL",          // Optional: Define a preprocessor macro
                //"-DWIN32",              // preprocessor macro from the VS project file, commented out the new build id 64bit
                "-DNDEBUG",             // preprocessor macro from the VS project file
                "-D_WINDOWS",           // preprocessor macro from the VS project file
                "-D_USRDLL",            // preprocessor macro from the VS project file
                "-DKEYGENALGO_EXPORTS", // preprocessor macro from the VS project file
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated for release."
        }        
    ],
    "version": "2.0.0"
}