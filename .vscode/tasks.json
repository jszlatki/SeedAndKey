{
    "tasks": [
        /// "Build SeedAndKey 64bit DLL Release",
        {
            "type": "cppbuild",
            "label": "Build SeedAndKey DLL Release",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-m64",                                                 // For x64
                "-std=c++17",                                           // C++17
                "-Wall",                                                // Enable all warnings    
                "-Os",                                                  // Optimize for size
                "-s",                                                   // Strip all symbols                            
                "${workspaceFolder}/GenerateKeyExImpl.cpp",
                "-shared",                                              // Create a shared library
                "-static-libgcc",                                       // Link the static version of libgcc 
                "-static-libstdc++",                                    // Link the static version of libstdc++
                "-I", "${workspaceFolder}/Crypto++/src/",                
                "${workspaceFolder}/Crypto++/build/x64_release/*.o",
                "-o",
                "${workspaceFolder}/build/x64_release/SeednKey_Crypto++.dll",
                "-DBUILD_DLL",          // Optional: Define a preprocessor macro
                // "-DWIN32",           // preprocessor macro from the VS project file x64 will be used
                "-DNDEBUG",             // preprocessor macro from the VS project file
                "-D_WINDOWS",           // preprocessor macro from the VS project file
                "-D_USRDLL",            // preprocessor macro from the VS project file
                "-DKEYGENALGO_EXPORTS", // preprocessor macro from the VS project file
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated for release."
        },   
        /// "Build SeedAndKey 64bit DLL Debug",
